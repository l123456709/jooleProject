@model JooleProject.Models.CascadingModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Search</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-image: linear-gradient(to bottom, steelblue, white);
            height: 100vh;
        }

        .img-container {
            position: relative;
            /*top: 350px;*/
            text-align: center;
        }

        h1 {
            position: relative;
            /*top: 350px;*/
        }

        .searchpage-container {
            display: block;
            /*position: relative;*/
            text-align: center;
            /*margin: auto;*/
            /*vertical-align: middle;*/
            height: 40%;
        }

        .search-container {
            display: flex;
        }

        #SearchForm {
            /*position: relative;*/
            /*top: 350px;*/
            max-width: 450px;
            margin: auto;
            text-align: center;
        }

        .icon {
            padding: 15px;
            color: rgb(49, 0, 128);
            width: 70px;
            text-align: left;
            /*text-align: right;*/
        }

        .submitbutton {
            margin-top: 5px;
            border-radius: 4px;
            padding-top: 6px;
            padding-bottom: 6px;
            padding-left: 8px;
            padding-right: 8px;
            border: hidden;
            display: block;
            background-color: steelblue;
            color: white;
            text-align: center;
        }

        .category-list {
            width: 130px;
            margin-top: 5px;
            margin-right: 5px;
            border-radius: 4px;
            padding-top: 6px;
            padding-bottom: 6px;
            padding-left: 8px;
            padding-right: 8px;
            border: hidden;
            display: block;
            background-color: steelblue;
            color: black;
            text-align: center;
        }

        .subcategory-list {
            width: 350px;
            margin-top: 5px;
            margin-right: 5px;
            border-radius: 4px;
            padding-top: 6px;
            padding-bottom: 6px;
            padding-left: 8px;
            padding-right: 8px;
            border: hidden;
            display: block;
            color: black;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="searchpage-container">
        <div class="img-container">
            <input type="image" id="joole" alt="joole" class="joole" src="~/Images/jooleLogo.png">
        </div>

        <h1 style="text-align:center;font-size:25px;font-weight:normal">Building Product Selection Platform</h1>

        @Html.Partial("_SearchBar", Model)
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
</body>
</html>
